{
	"name": "language-maxscript",
	"displayName": "Language MaxScript",
	"description": "Autodesk 3ds Max MaxScript language support",
	"icon": "mxs.png",
	"author": "Atelier Bump",
	"license": "MIT",
	"version": "1.20.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/HAG87/vscode-maxscript-lsp"
	},
	"homepage": "https://github.com/HAG87/vscode-maxscript-lsp",
	"publisher": "atelierbump",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"MaxScript",
		"max script"
	],
	"engines": {
		"vscode": "^1.45.0"
	},
	"activationEvents": [
		"onLanguage:maxscript",
		"onCommand:mxs.minify.file",
		"onCommand:mxs.minify.files"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "maxscript",
				"aliases": [
					"MaxScript",
					"maxscript",
					"mxs"
				],
				"extensions": [
					".ms",
					".mcr"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "maxscript",
				"scopeName": "source.mxs",
				"path": "./syntaxes/maxscript.tmLanguage.json"
			}
		],
		"semanticTokenScopes": [
			{
				"language": "maxscript",
				"scopes": {
					"class": [
						"support.class.mxs"
					],
					"classclass.defaultLibrary": [
						"support.class.mxs"
					],
					"function.defaultLibrary": [
						"support.function.mxs"
					],
					"interface": [
						"support.type.interface.mxs"
					],
					"namespace": [
						"support.superclass.mxs"
					],
					"struct": [
						"storage.type.struct.mxs"
					],
					"type.defaultLibrary": [
						"support.type.primitive.mxs"
					],
					"type": [
						"support.type.primitive.mxs"
					],
					"variable": [
						"support.variable.system.mxs"
					],
					"variable.other.readwrite": [
						"support.variable.system.mxs"
					]
				}
			}
		],
		"commands": [
			{
				"command": "mxs.help",
				"title": "Code reference...",
				"category": "MaxScript"
			},
			{
				"command": "mxs.minify",
				"title": "Minify open document",
				"category": "MaxScript"
			},
			{
				"command": "mxs.minify.file",
				"title": "Minify file",
				"category": "MaxScript"
			},
			{
				"command": "mxs.minify.files",
				"title": "Minify files...",
				"category": "MaxScript"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "resourceExtname == .ms || resourceExtname == .mcr",
					"command": "mxs.minify.file",
					"group": "1_modification@1"
				}
			],
			"editor/context": [
				{
					"when": "editorHasSelection && editorTextFocus && resourceLangId == maxscript",
					"command": "mxs.help",
					"group": "navigation@1"
				}
			],
			"commandPalette": [
				{
					"when": "editorLangId  == maxscript",
					"command": "mxs.minify"
				},
				{
					"command": "mxs.minify.files"
				}
			]
		},
		"snippets": [
			{
				"language": "maxscript",
				"path": "./snippets/maxscript.json"
			}
		],
		"configurationDefaults": {
			"[maxscript]": {
				"editor.semanticHighlighting.enabled": true
			}
		},
		"configuration": {
			"type": "object",
			"title": "Language MaxScript",
			"properties": {
				"languageServerMaxScript.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				},
				"languageServerMaxScript.GoToSymbol": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Enable Document Symbols and Diagnostics."
				},
				"languageServerMaxScript.GoToDefinition": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Enable Document Definitions."
				},
				"languageServerMaxScript.Diagnostics": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Enable Document diagnostics"
				},
				"languageServerMaxScript.Completions": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Enable suggest completions"
				},
				"maxscript.Language.Semantics": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Enable Semantic highlight"
				},
				"languageServerMaxScript.MinifyFilePrefix": {
					"scope": "resource",
					"type": "string",
					"default": "min_",
					"description": "Prefix for code minify output"
				},
				"maxscript.Help.Provider": {
					"scope": "resource",
					"type": "string",
					"default": "http://help.autodesk.com/view/3DSMAX/2021/ENU/",
					"description": "MaxScript help source"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/moo": "^0.5.3",
		"@types/nearley": "^2.11.1",
		"@types/node": "^12.12.55",
		"@types/object-path": "^0.11.0",
		"@typescript-eslint/parser": "^2.34.0",
		"eslint": "^6.4.0",
		"mocha": "^6.2.2",
		"typescript": "^3.9.7",
		"vscode-languageserver-types": "^3.15.1"
	},
	"dependencies": {}
}
