{
	"compilerOptions": {
		"module": "commonJS",
		"target": "ES6",
		"lib": ["ES6"],
		"outDir": "out",
		"rootDir": "src",
		"sourceMap": true,
		"allowJs": true,
		"strict": true,
		"composite": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src"],
	"exclude": ["out", "node_modules", ".vscode-test"]
}
