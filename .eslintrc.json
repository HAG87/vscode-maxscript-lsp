{
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"sourceType": "module"
	},
	"env": {
		"node": true
	},
	"rules": {
		"semi": "error",
		"no-extra-semi": "warn",
		"curly": "warn",
		"quotes": ["error", "single", { "allowTemplateLiterals": true } ],
		"indent": ["warn", "tab", { "SwitchCase": 1 } ]
	}
}